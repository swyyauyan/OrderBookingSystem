<!DOCTYPE html>
<html>
  <head>
    <style>
    body{
      margin: 0px;
    }
    #header{
      width: 100%; 
      float:left; 
      background-color: lightblue;
      padding: 10px;
    }
    #main_body{
      width: 100%;
      padding-left: 30px;
    }

    #order_history_table{
      width: 90%;
      border: 1px solid black; 
    }

    #order_history_table th{
        text-align: canter;
      border: 1px solid black; 
    }

    #order_history_table td{
        text-align: left;
      border: 1px solid black; 
    }
    </style>

    <title><%= title %></title>
    <div id = 'header'>
      <h2><a href="http://localhost:3000"><%= title %></a></h2>
    </div>
  </head>
  <body>
    <div id = 'main_body'>
    
        <b>Order Histories</b>
        <table id = 'order_history_table'>
            <tr>
                <th>Order ID</th>
                <th>Log</th>
                <th>Date time</th>
            </tr>

            <% for(var i=0; i<orderHistories.length; i++) {%>
                <tr>
                    <td><a href="http://localhost:3000/get/order/<%= orderHistories[i].orderId %>"><%= orderHistories[i].orderId %></a></td>
                    <td><%= orderHistories[i].description.description %></td>
                    <td><%= orderHistories[i].createAt%></td>
                </tr>
            <%}%>
        </table>
      </div><!-- main+body-->
  </body>
</html>
